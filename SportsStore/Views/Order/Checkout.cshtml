@model Order

<h2>Оплатить сейчас</h2>
<p>Пожалуйста, введите ваши данные, и мы отправим ваш товар прямо сейчас!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Получателя</h3>
    <div class="form-group">
        <label>Наименование:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Адресс</h3>
    <div class="form-group">
        <label>Улица:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Дом:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Номер квартиры:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Район:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Почтовый индекс:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Дополнительная опция</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Подарочная упаковка
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Завершить заказ" />
    </div>
</form>
